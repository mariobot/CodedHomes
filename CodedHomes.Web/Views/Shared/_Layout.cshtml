<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title :: CodedHomes</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("styles", required: false)
    </head>
    <body class="container-fluid">
        <header>
	  <div class="row">
              <div class="col-md-6">
                  <img src="~/Images/logo.png" alt="CodedHomes - Logo" />
	    </div>
              <div class="col-md-6">
                  <div class="pull-right">
		  @if (ViewBag.IncludeManifest != null)
		    {
		        @Html.ActionLink("Manager Account","","")        
		    }
		    else
		    {
		        @Html.Partial("_LoginPartial")
		    }
	        </div>
	    </div>
	  </div>
        </header>
        <article>
            @RenderBody()
        </article>
        <footer>
            <p>&copy; @DateTime.Now.Year - CodedHomes By MaRioBoT</p>
        </footer>          
        @RenderSection("breakout", required: false)
        @Scripts.Render("~/bundles/site")
        @RenderSection("scripts", required: false)
    </body>
</html>
